<!-- Coming Soon Fragment - Popup Friendly -->
<link
  href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
  rel="stylesheet"
/>

<style>
  .coming-soon-container {
    background-color: #000814;
    color: #007bff;
    font-family: "Press Start 2P", cursive;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
    padding: 20px;
  }

  .coming-soon-text {
    font-size: clamp(1.5rem, 4vw, 3rem);
    text-align: center;
    animation: flicker 1.5s infinite alternate;
    text-shadow: 0 0 2px #007bff, 0 0 4px #007bff, 0 0 6px #007bff;
    line-height: 1.2;
    word-break: break-word;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
      text-shadow: 0 0 2px #007bff, 0 0 4px #007bff, 0 0 6px #007bff;
    }
    50% {
      opacity: 0.7;
      text-shadow: 0 0 1px #0056b3, 0 0 3px #0056b3;
    }
    100% {
      opacity: 1;
      text-shadow: 0 0 2px #007bff, 0 0 4px #007bff, 0 0 6px #007bff;
    }
  }

  /* Responsive text sizing for popup */
  @media (max-width: 600px) {
    .coming-soon-text {
      font-size: 1.2rem;
    }
  }
</style>

<div class="coming-soon-container">
  <h1 class="coming-soon-text">COMING SOON</h1>
</div>
