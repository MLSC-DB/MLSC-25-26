<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recruitment Form</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Pixelify+Sans&family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Pixelify Sans", sans-serif;
        background-color: black;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      .scan-wrapper {
        position: absolute;
        inset: 0;
        z-index: -10;
        pointer-events: none;
      }

      .scanline::before {
        content: "";
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          to bottom,
          rgba(1, 1, 1, 0.6) 0px,
          rgba(16, 16, 16, 0.7) 2px,
          transparent 2px,
          transparent 4px
        );
        z-index: 1;
        pointer-events: none;
        animation: scanlineHorizontal 0.4s linear infinite;
      }

      @keyframes scanlineHorizontal {
        0% {
          background-position: 0 0;
        }
        100% {
          background-position: 0 4px;
        }
      }

      .vignette::after {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(
          ellipse at center,
          rgba(255, 255, 255, 0.06) 0%,
          rgba(0, 0, 0, 0.6) 100%
        );
        mix-blend-mode: screen;
        pointer-events: none;
        filter: blur(0.5px);
        z-index: 2;
      }

      .flicker {
        animation: flicker 6s infinite;
      }

      @keyframes flicker {
        0%,
        18%,
        22%,
        25%,
        53%,
        57%,
        100% {
          opacity: 1;
        }
        20%,
        24%,
        55% {
          opacity: 0.8;
        }
      }

      ::-webkit-scrollbar {
        display: none;
      }
    </style>
  </head>

  <body class="relative font-pixel">
    <!-- ðŸŽ¬ Background with effects -->
    <div class="scan-wrapper">
      <div class="w-full h-full relative flicker scanline vignette">
        <img
          src="/images/assets/registration/images/bg.jpg"
          alt="Background"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <!-- ðŸ“ Foreground Form (z-10) -->
    <div
      class="relative z-[10] flex justify-center items-center min-h-[100%] p-4"
    >
      <div
        class="w-full max-w-md rounded-md shadow-lg text-white overflow-y-auto max-h-[90vh]"
      >
        <h2 class="text-center font-retro text-[30px] mb-10">
          RECRUITMENT FORM
        </h2>
        <!-- Show validation errors -->
        <% if (typeof errors !== "undefined" && errors.length > 0) { %>
        <div class="bg-red-900 text-white p-3 mb-4 rounded text-sm">
          <ul class="list-disc list-inside">
            <% errors.forEach(function(error) { %>
            <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>

        <form id="register-form" class="flex flex-col gap-5">
          <input
            name="name"
            type="text"
            placeholder="Enter your name"
            value="<%= formData?.name || '' %>"
            required
            class="bg-red-950 border <%= formErrors?.name ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          />
          <input
            name="email"
            type="email"
            placeholder="Enter your E-MAIL"
            value="<%= formData?.email || '' %>"
            required
            pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
            class="bg-red-950 border <%= formErrors?.email ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          />
          <input
            name="phone"
            type="tel"
            placeholder="Phone Number"
            value="<%= formData?.phone || '' %>"
            required
            pattern="[0-9]{10}"
            class="bg-red-950 border <%= formErrors?.phone ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          />

          <select
            name="yearOfStudy"
            required
            class="bg-red-950 border <%= formErrors?.yearOfStudy ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          >
            <option value="" disabled <%= !formData?.yearOfStudy ? "selected" : "" %>>Year of Study</option>
            <option value="First Year" <%= formData?.yearOfStudy === "First Year" ? "selected" : "" %>>First Year</option>
            <option value="Second Year" <%= formData?.yearOfStudy === "Second Year" ? "selected" : "" %>>Second Year</option>
          </select>

          <select
            name="domainPreference1"
            required
            class="bg-red-950 border <%= formErrors?.domainPreference1 ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          >
            <option value="" disabled <%= !formData?.domainPreference1 ? "selected" : "" %>>Domain Preference 1</option>
            <option value="Tech" <%= formData?.domainPreference1 === "Tech" ? "selected" : "" %>>Tech</option>
            <option value="Design" <%= formData?.domainPreference1 === "Design" ? "selected" : "" %>>Design</option>
            <option value="Management" <%= formData?.domainPreference1 === "Management" ? "selected" : "" %>>Management</option>
          </select>

          <select
            name="domainPreference2"
            required
            class="bg-red-950 border <%= formErrors?.domainPreference2 ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          >
            <option value="" disabled <%= !formData?.domainPreference2 ? "selected" : "" %>>Domain Preference 2</option>
            <option value="Tech" <%= formData?.domainPreference2 === "Tech" ? "selected" : "" %>>Tech</option>
            <option value="Design" <%= formData?.domainPreference2 === "Design" ? "selected" : "" %>>Design</option>
            <option value="Management" <%= formData?.domainPreference2 === "Management" ? "selected" : "" %>>Management</option>
          </select>

          <select
            name="domainPreference3"
            required
            class="bg-red-950 border <%= formErrors?.domainPreference3 ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          >
            <option value="" disabled <%= !formData?.domainPreference3 ? "selected" : "" %>>Domain Preference 3</option>
            <option value="Tech" <%= formData?.domainPreference3 === "Tech" ? "selected" : "" %>>Tech</option>
            <option value="Design" <%= formData?.domainPreference3 === "Design" ? "selected" : "" %>>Design</option>
            <option value="Management" <%= formData?.domainPreference3 === "Management" ? "selected" : "" %>>Management</option>
          </select>

          <input
            name="projects"
            type="text"
            placeholder="Projects"
            class="bg-red-950 border <%= formErrors?.projects ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          />
          <input
            name="motivation"
            type="text"
            placeholder="Why do you want to join MLSC?"
            required
            class="bg-red-950 border <%= formErrors?.motivation ? 'border-red-500' : 'border-black' %> px-2 py-1 text-sm"
          />

          <button
            type="submit"
            class="relative flex justify-center items-center mt-4"
          >
            <img
              src="/images/assets/registration/images/button.png"
              alt="Submit"
              width="100"
              height="50"
              class="hover:brightness-110 hover:scale-105 transition-all"
            />
            <span
              class="absolute text-white font-retro text-[10px] pointer-events-none"
              >SUBMIT</span
            >
          </button>
          <% if (typeof errors !== "undefined" && errors.length > 0) { %>
          <div class="bg-red-900 text-white p-3 mb-4 rounded text-sm">
            <ul class="list-disc list-inside">
              <% errors.forEach(function(error) { %>
              <li><%= error %></li>
              <% }) %>
            </ul>
          </div>
          <% } %>
        </form>
      </div>
    </div>
  </body>
</html>
